generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model User {
    id             String                      @id @default(uuid())
    email          String                      @unique
    firstName      String                      @map("first_name")
    lastName       String                      @map("last_name")
    password       String
    createdAt      DateTime?                   @default(now())
    weddingsOwn    Wedding[]
    productsGifted GiftContribution[]
    weddingsGuest  Guest[]
    requests       Request[]
    passwordReset  PasswordResetToken[]

    @@map("users")
}

model Wedding {
    id              Int        @id @default(autoincrement())
    weddingTitle    String     @map("wedding_title")
    weddingDate     String     @map("wedding_date")
    shippingAddress String     @default("null") @map("shipping_address")
    user            User       @relation(fields: [createdBy], references: [id])
    createdBy       String
    createdAt       DateTime?  @default(now())
    gifts           Gift[]
    guests          Guest[]
    request         Request[]
    gifters         GiftContribution[]

    @@map("weddings")
}

model Gift {
    id          Int       @id @default(autoincrement())
    quantity    Int
    productName String    @map("product_name")
    productLink String    @map("product_link")
    wedding     Wedding   @relation(fields: [fromWedding], references: [id])
    fromWedding Int       @map("from_wedding")
    createdAt   DateTime? @default(now())

    @@map("gifts")
}

model Guest {
    id                Int       @id @default(autoincrement())
    user              User      @relation(fields: [guestId], references: [id])
    guestId           String    @map("guest_id")
    wedding           Wedding   @relation(fields: [referencedWedding], references: [id])
    referencedWedding Int       @map("referenced_wedding")
    addedOn           DateTime? @default(now())

    @@map("guests")
}

model Request {
    id             Int       @id @default(autoincrement())
    user           User      @relation(fields: [requestBy], references: [id])
    requestBy      String    @map("request_by")
    wedding        Wedding   @relation(fields: [relatedWedding], references: [id])
    relatedWedding Int       @map("related_wedding")
    requestByName  String    @map("request_by_name")
    weddingTitle   String    @map("wedding_title")
    pending        Boolean   @default(true)
    accepted       Boolean   @default(false)
    madeOn         DateTime? @default(now())

    @@map("requests")
}

model GiftContribution {
    id             Int       @id @default(autoincrement())
    presenter      String
    relatedWedding Int       @map("related_wedding")
    user           User      @relation(fields: [presenter], references: [id])
    wedding        Wedding   @relation(fields: [relatedWedding], references: [id])
    quantity       Int
    giftName       String    @map("gift_name")
    giftedAt       DateTime? @default(now())

    @@map("gift_contributions")
}

model PasswordResetToken {
    id             Int     @id @default(autoincrement())
    requestedBy    String  @map("requested_by")
    expirationDate BigInt  @map("expiration_date")
    used           Boolean
    token          String  @unique
    user           User    @relation(fields: [requestedBy], references: [id])

    @@map("password_reset_tokens")
}
