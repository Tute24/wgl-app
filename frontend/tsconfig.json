{
  "compilerOptions": {
    "baseUrl": "frontend",
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["fronted/next-env.d.ts", "frontend/**/*.ts", "**/*.tsx", "frontend/.next/types/**/*.ts"],
  "exclude": ["frontend/node_modules"]
}
